	 * Questão: 6 - Relação de estudantes
	 */
	
	funcao inicio()
	{
		cadeia nome[5]
		inteiro idade[5], i

		para (i = 0; i < 5; i++){
			leia(nome[i], idade[i])
		}

		para (i = 0; i < 5; i++){
			escreva(nome[i], " - ", idade[i], "\n")
		}
	}
}

